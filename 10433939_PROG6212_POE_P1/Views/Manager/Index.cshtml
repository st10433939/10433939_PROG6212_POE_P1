@model List<_10433939_PROG6212_POE_P1.Models.Claim>

@{
	ViewBag.Title = "Manager Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-bar mb-4">
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" href="/Manager?filter=all">
			All Books (@Model.Count)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" href="/Manager?filter=pending">
			Pending (@ViewBag.PendingCount)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "declined" ? "active" : "")" href="/Manager?filter=declined">
			Declined (@ViewBag.DeclinedCount)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "approved" ? "active" : "")" href="/Manager?filter=approved">
			Approved (@ViewBag.ApprovedCount)
		</a>
	</li>
</ul>
<!--Nav to filter tables-->
<ul class="nav nav-tabs">
	<li class="nav-item">
		<a class="nav-link active" href="#">All Claims (19)</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" href="#">Pending Claims (5)</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" href="#">Approved Claims (12)</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" href="#">Declined Claims (2)</a>
	</li>
</ul>

<!--Books Table-->
<div class="card">
	<div class="card-body">
		@if (Model.Count < 0)
		{
			<div class="text-muted">
				No claims to be loaded
			</div>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Lecturer Name</th>
						<th>Hours Worked</th>
						<th>Hourly Rate</th>
						<th>Status</th>
						<th>Submitted Date</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var claim in Model)
					{
						<tr>
							<td><strong>@claim.LecturerName</strong></td>
							<td>@claim.HoursWorked</td>
							<td>@claim.HourlyRate</td>
							<td>@claim.SubmittedBy</td>
							<td>@claim.SubmittedDate</td>
							<td>
								@if (@claim.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Pending)
								{
									<span class="badge bg-warning">Pending</span>
								}
								else if (@claim.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Approved)
								{
									<span class="badge bg-success">Approved</span>
								}
								else
								{
									<span class="badge bg-danger">Declined</span>
								}
							</td>
							<td>@claim.SubmittedDate</td>
							<td>
								<a href="/Manager/Review/@claim.Id" class="btn btn-primary">
									@(claim.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Pending ? "Review" : "View")
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}

	</div>
</div>