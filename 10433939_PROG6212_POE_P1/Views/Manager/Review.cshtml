@model _10433939_PROG6212_POE_P1.Models.Claim

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Claims">My Claims</a></li>
        <li class="breadcrumb-item">Review</li>
    </ol>
</nav>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger"> @TempData["Error"]</div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex">
                <h4>@Model.LecturerName</h4>
                <div>
                    @if (Model.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Pending)
                    {
                        <span class="badge bg-warning fs-6">⏳ Pending Review</span>
                    }
                    else if (Model.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Approved)
                    {
                        <span class="badge bg-success fs-6">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6"> Declined</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Hours Worked</strong></div>
                    <div class="col-sm-9">@Model.HoursWorked</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Hourly Rate</strong></div>
                    <div class="col-sm-9">@Model.HourlyRate</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Additional Notes</strong></div>
                    <div class="col-sm-9">@Model.AdditionalNotes</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                @if (Model.Status == _10433939_PROG6212_POE_P1.Models.ClaimStatus.Pending)
                {
                    <hr class="my-4">
                    <h5>Submit Your Review</h5>

                    <form asp-action="Approve" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Approval Comments (Optional)</label>
                            <textarea name="comments" class="form-control" rows="3" placeholder="Add any comments about why this claim is approved..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg">
                            Approve Claim
                        </button>
                    </form>

                    <form asp-action="Decline" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Reason for Declining *</label>
                            <textarea name="comments" class="form-control" rows="3" placeholder="Please provide detailed reasons for declining..." required></textarea>
                            <small class="form-text text-muted">This will be visible to the lecturer who submitted the claim.</small>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg">
                            Decline Claim
                        </button>
                        <a href="/Manager" class="btn btn-secondary btn-lg">Cancel</a>
                    </form>
                }
            </div>
        </div>
        <></>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5> Supporting Documents (@Model.Documents.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Documents.Count == 0)
                {
                    <p class="text-muted">No documents uploaded.</p>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var doc in Model.Documents)
                        {
                            <div class="list-group-item">
                                <strong>@doc.FileName</strong>
                                <span class="badge bg-success">🔒 Encrypted</span>
                                <br>
                                <small>@(doc.FileSize / 1024) KB</small>
                                <br>
                                <a href="/Claims/DownloadDocument?claimId=@Model.Id&docId=@doc.Id"
                                   class="btn btn-sm btn-primary mt-2">
                                    Download & Decrypt
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
